{
  "info": {
    "name": "Mini DLP Platform (FastAPI)",
    "_postman_id": "mini-dlp-fastapi",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "config_base", "value": "http://localhost:3001" },
    { "key": "scanner_base", "value": "http://localhost:3003" },
    { "key": "tenant_id", "value": "11111111-1111-1111-1111-111111111111" },
    { "key": "dt_id", "value": "" },
    { "key": "ds_id", "value": "" },
    { "key": "scan_id", "value": "" }
  ],
  "item": [
    {
      "name": "Create DT",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "{{config_base}}/data-types", "host": ["{{config_base}}"], "path": ["data-types"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Sensitive Keywords\",\n  \"description\": \"demo\",\n  \"type\": \"keywords\",\n  \"content\": [\"secret\", \"password\", \"token\"],\n  \"threshold\": 2\n}"
        }
      },
      "event": [{
        "listen": "test",
        "script": { "exec": [
          "const json = pm.response.json();",
          "pm.collectionVariables.set('dt_id', json.id);"
        ]}
      }]
    },
    {
      "name": "Get DT",
      "request": {
        "method": "GET",
        "url": { "raw": "{{config_base}}/data-types/{{dt_id}}", "host": ["{{config_base}}"], "path": ["data-types", "{{dt_id}}"] }
      }
    },
    {
      "name": "Create DS",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "{{config_base}}/data-sets", "host": ["{{config_base}}"], "path": ["data-sets"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tenant_id\": \"{{tenant_id}}\",\n  \"name\": \"Default Policy\",\n  \"data_type_ids\": [\"{{dt_id}}\"]\n}"
        }
      },
      "event": [{
        "listen": "test",
        "script": { "exec": [
          "const json = pm.response.json();",
          "pm.collectionVariables.set('ds_id', json.id);"
        ]}
      }]
    },
    {
      "name": "Get DS",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{config_base}}/data-sets/{{ds_id}}?tenant_id={{tenant_id}}",
          "host": ["{{config_base}}"],
          "path": ["data-sets", "{{ds_id}}"],
          "query": [{ "key": "tenant_id", "value": "{{tenant_id}}" }]
        }
      }
    },
    {
      "name": "Trigger Scan",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "{{scanner_base}}/scans", "host": ["{{scanner_base}}"], "path": ["scans"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tenant_id\": \"{{tenant_id}}\",\n  \"ds_id\": \"{{ds_id}}\",\n  \"input\": \"this contains a secret token and a password\"\n}"
        }
      },
      "event": [{
        "listen": "test",
        "script": { "exec": [
          "const json = pm.response.json();",
          "pm.collectionVariables.set('scan_id', json.scan_id);"
        ]}
      }]
    },
    {
      "name": "Poll Scan Result",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{scanner_base}}/scans/{{scan_id}}?tenant_id={{tenant_id}}",
          "host": ["{{scanner_base}}"],
          "path": ["scans", "{{scan_id}}"],
          "query": [{ "key": "tenant_id", "value": "{{tenant_id}}" }]
        }
      }
    }
  ]
}